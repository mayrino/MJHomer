<div class="mayrino-main-panel">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-12">
            <div class="checkout-panel">
                <div class="checkout-heading">
                    <h1>CHECKOUT</h1>
                    <H4>Your total: <i class="fa {{#xif  lng '===' 'en' }} fa-usd {{else}} fa-jpy {{/xif}}" aria-hidden="true"></i> {{ total }}</H4>
                    {{#if note }}<h4>Your Note to Seller:{{ note }}</h4>{{/if}}
                    {{#unless noErrors }}<div  class="alert alert-danger">has errors:{{ errMsg }}</div>{{/unless}}
                </div>
                <div class="checkout-body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#WechatPay" aria-controls="WechatPay" role="tab" data-toggle="tab">WechatPay</a></li>
                        <li role="presentation"><a href="#AliPay" aria-controls="AliPay" role="tab" data-toggle="tab">AliPay</a></li>
                        <li role="presentation"><a href="#stripePay" aria-controls="stripePay" role="tab" data-toggle="tab">CreditCard</a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="WechatPay">
                            <div class="stripe">
                                <div class="wePay">
                                <div class="row">
                                    <div class="col-md-3">
                                        <img class="img-responsive"  alt="Responsive image" src="/images/checkout/WePayLogo.png">
                                    </div>
                                 </div>
                                 <div class="row">
                                    <div class="col-md-4 qr">
                                       <img class="img-responsive" alt="Responsive image" src="/images/checkout/demo.jpg">
                                    </div>                                   
                                </div>   
                                 <div class="row">
                                    <div class="col-md-4 ex">
                                       <img class="img-responsive" alt="Responsive image" src="/images/checkout/text.png">
                                    </div>                                   
                                </div>                        
                             </div> 
                           </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="AliPay">
                            
                            TODO.......
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="stripePay">
                            <div class="stripe">
                                <form id="payment-form" action="/shop/checkout" method="post">
                                    <div class="group">
                                        <label>
                                            <span>Name</span>
                                            <input name="name" class="field" placeholder="Jane Doe" id="name" required />
                                        </label>
                                        <label>
                                            <span>Phone</span>
                                            <input class="field" placeholder="(123) 456-7890" type="tel" name="phone" required />
                                        </label>
                                        <label>
                                            <span>ZIP code</span>
                                            <input name="postCode" class="field" placeholder="94110" required />
                                        </label>
                                    </div>
                                    <div class="group">
                                        <label>
                                            <span>Card</span>
                                            <div id="card-element" class="field"></div>
                                        </label>
                                    </div>
                                    <button type="submit">Pay <i class="fa {{#xif  lng '===' 'en' }} fa-usd {{else}} fa-jpy {{/xif}}" aria-hidden="true"></i> {{  total }}</button>
                                    <div class="outcome">
                                        <div class="error" role="alert"></div>
                                        <div class="success">
                                            Success! Your Stripe token is <span class="token"></span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>